{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [],
  "exclude": ["node_modules", "angular/node_modules", "**/node_modules"]
}

